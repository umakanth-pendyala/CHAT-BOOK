<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Your Profile</title>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
    integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css"
    integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous" />
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
    integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"
    integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s"
    crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/css/utils.css" />
  <link rel="stylesheet" href="/css/edit-page.css">
</head>

<body>
  <!-- NAV BAR -->
  <%- include("./components/nav.ejs") %>
  <section id="c-info-section">
    <form action="/user/updateProfile" method="POST" enctype="multipart/form-data">
      <div class="info-section-container">
        <div class="c-image-section">

          <img src="<%= userData.profilePicURL %>" alt="No Image uploaded" />
          <button type="button" style="background-color: #cf2a27; color: #fff; padding: 0.7rem 0.9rem; margin-top: 20px"
            data-toggle="modal" data-target="#exampleModalCenter">
            EDIT IMAGE
          </button>
          <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLongTitle">UPLOAD IMAGE</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <input type="file" name="img" id="image" accept="image/*"
                    onchange="fileManager.imageReadURL(this);" />
                  <img id="img-show" src="" alt="img"
                    style="display: block; margin-left: 20px; border: none; margin-top: 10px;" />
                </div>
                <div class="modal-footer">
                  <button type="button" id="img-refresh" class="btn btn-secondary" data-dismiss="modal"
                    onclick="customFunction.reset($('#image'), '#img-show');">
                    Refresh
                  </button>
                  <button type="button" class="btn btn-primary save" onclick="save();">Save changes
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="c-description-section">

          <div class="c-form-group">
            <div class="c-form-item">
              <label for="text">Name</label>
              <input type="text" placeholder="name" value="<%= userData.name %>" name="name" />
            </div>
            <div class="c-form-item">
              <label for="text">Email</label>
              <input type="email" placeholder="email" value="<%= userData.email %>" disabled />
            </div>
            <div class="c-form-item">
              <label for="text">Relationship Status</label>
              <input type="text" placeholder="Relationship " value="<%= userData.relationshipStatus %>"
                name="relationshipStatus" />
            </div>
            <div class="c-form-item">
              <label for="text">Current Profession</label>
              <input type="text" placeholder="Student" value="<%= userData.profession %>" name="profession" />
            </div>
            <div class="c-form-item">
              <label for="text">Phone Number</label>
              <input type="text" placeholder="898989898" value="<%= userData.phoneNumber %>" name="phoneNumber" />
            </div>
            <div class="c-form-item c-selections">
              <div class="tap">
                <label for="text">Date Of Birth: <%= userData.dateOfBirth %></label>
                <input type="date" placeholder="2/10/2000" name="dateOfBirth" />
              </div>
              <div class="tap">
                <label for="text">Gender</label>
                <select id="" class="browser-default custom-select" name="gender">
                  <!-- <option selected>Gender</option> -->
                  <%if (userData.gender == 'Male') { %>
                  <option value="1" selected>Male</option>
                  <option value="2">Female</option>
                  <option value="3">Other</option>
                  <% } else if (userData.gender == 'Female') { %>
                  <option value="1">Male</option>
                  <option value="2" selected>Female</option>
                  <option value="3">Other</option>
                  <% } else { %>
                  <option value="1">Male</option>
                  <option value="2">Female</option>
                  <option value="3" selected>Other</option>
                  <% } %>
                </select>
              </div>
            </div>
            <div class="c-form-item c-selctions">
              <label for="text">Description</label>
              <textarea name="bio" placeholder="<%= userData.description%> " id="" cols="41" rows="5"
                style="resize: none; padding: 5px"></textarea>
            </div>
            <button type="submit"
              style="background-color: #cf2a27; color: #fff; padding: 0.7rem 0.9rem; margin-top: 20px;"> Update
            </button>
          </div>

        </div>
      </div>
    </form>
  </section>
  <footer>
    <h5>
      2020 &copy; all Rights reserved.
      <a href="">Developed By Umakanth and Kaif ali Khan</a>
    </h5>
  </footer>
  <script>
    window.customFunction = {
      reset: function (e, elementId) {
        e.wrap("<form>").closest("form").get(0).reset();
        $(elementId).attr("src", " ").width(30).height(30);
        e.unwrap();
      },
      as: function () {
        alert("working");
      },
    };
    const fileManager = {
      imageReadURL: input => {
        if (input.files && input.files[0]) {
          var reader = new FileReader();
          reader.onload = function (e) {
            $("#img-show").attr("src", e.target.result).width(100).height(100);
          };

          reader.readAsDataURL(input.files[0]);
        }
      },
    };
    function save() {
      $(".close").click();
    }
  </script>
</body>

</html>